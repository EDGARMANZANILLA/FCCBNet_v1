@model DAP.Plantilla.Models.PermisosModels.PermisosUsuarioModel

@{
    ViewBag.Icono = "fas fa-exclamation-triangle";
    ViewBag.Title = "Incidencias";


}



<section>
    <div class="col-12 offset-md-2 col-md-8 text-center">
        <h5 class=" text-uppercase"> Crear una nueva incidencia para formas de pagos del banco: </h5>
    </div>

    <div class="col-12">
        <div class="text-center">
            <h3 class="text-capitalize" id="Banco">@ViewBag.NombreBancoSeleccionado</h3>
            <h6 id="IdCuentaBancariaAgregar" style="display:none">@ViewBag.IdBancoSeleccionado</h6>

        </div>

    </div>

</section>

</br>
</br>
</br>

<seccion class="card col-12 offset-md-2 col-md-8" style="box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);">

    <br />
    <div class="col-5 text-left">
        <a type="button" class="btn btn-success btn text-center" href="@Url.Action("Index", "Inventario", new  { IdCuentaBancaria = ViewBag.IdBancoSeleccionado })"> <i class="fas fa-arrow-left"></i>  Regresar</a>
    </div>
    <br />
    <div class=" margenAlPie row">


        <div class="btn-block">
            <h5 class="text-center">Seleccione la opcion deseada:</h5>
        </div>

        <div class="col-12 col-md-6  btn-block">
            <a type="button" class="btn btn-primary btn-lg  btn-block" href="@Url.Action("Inhabilitar", "Inventario", new  { IdCuentaBancaria = ViewBag.IdBancoSeleccionado })">Inhabilitar</a>

        </div>

        <div class="col-12 col-md-6  btn-block">
            <a type="button" class="btn btn-primary btn-lg  btn-block" href="@Url.Action("Asignar", "Inventario", new { IdCuentaBancaria = ViewBag.IdBancoSeleccionado })" title="Realizar un ajuste al inventario">Asignar</a>

        </div>

    </div>

</seccion>




<!-- Generacion de tablas -->
<section class="margenSection">

    <div class="table-responsive margenSection ">

        <table id="table_id" class="table table-striped table-bordered table-hover text-center" cellspacing="0" style="width:100%">
            <thead class="tabla ">
                @*<caption>CONTROL DEL DETALLE DEL BANCO  @ViewBag.NombreBancoSeleccionado</caption>*@
                <tr>
                    <th>Banco</th>
                    <th>Cuenta</th>
                    <th>Año</th>
                    <th>Formas Inhabilitadas</th>
                    <th>Formas Asignadas a Chequera Externa</th>
                    <th>Formas Foliadas</th>
                </tr>
            </thead>
            <tbody>
                @*<tr>
                        <td>@ViewBag.ResumenIncidencias.NombreBanco</td>
                        <td>@ViewBag.ResumenIncidencias.Cuenta </td>
                        <td>@ViewBag.ResumenIncidencias.anioResumen</td>
                        <td>@ViewBag.ResumenIncidencias.FormasInhabilitadas</td>
                        <td>@ViewBag.ResumenIncidencias.FormasAsignadas</td>
                        <td>@ViewBag.ResumenIncidencias.FormasFoliadasCorrectamente</td>

                    </tr>*@


                @foreach (var resumen in ViewBag.ResumenIncidencias)
                {
                    <tr>
                        <td>@resumen.NombreBanco</td>
                        <td>@resumen.Cuenta </td>
                        <td>@resumen.anioResumen</td>
                        <td>@resumen.FormasInhabilitadas</td>
                        <td>@resumen.FormasAsignadas</td>
                        <td>@resumen.FormasFoliadasCorrectamente</td>

                    </tr>

                }
            </tbody>
        </table>


    </div>

</section>





